{
  "compilerOptions": {
    "target": "ES2020",
    "useDefineForClassFields": true,
    "lib": ["ES2020", "DOM", "DOM.Iterable"],
    "module": "ESNext",
    "skipLibCheck": true,

    /* Bundler mode */
    "moduleResolution": "bundler",
    "allowImportingTsExtensions": true,
    "resolveJsonModule": true,
    "isolatedModules": true,
    "noEmit": true,
    "jsx": "react-jsx",

    /* Linting */
    "strict": true,
    "noUnusedLocals": false,
    "noUnusedParameters": false,
    "noFallthroughCasesInSwitch": true,
    
    /* Types */
    "types": ["vite/client"],
    
    /* Path mapping - must match vite.config.ts aliases */
    "baseUrl": ".",
    "paths": {
      "@/*": ["./*"]
    }
  },
  "include": [
    "vite-env.d.ts",
    "path-alias.d.ts",
    "*.ts",
    "*.tsx",
    "components/**/*",
    "services/**/*",
    "lib/**/*",
    "types.ts",
    "constants.ts"
  ],
  "exclude": [
    "node_modules",
    "dist",
    "scripts",
    "test",
    "contracts",
    "hardhat.config.ts"
  ]
}

